<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="incredible619.notsofast.studentsdisplay"
    android:background="@mipmap/g">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:id="@+id/welcome"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#9348a0"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/roll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROLL NO OF USER"
        android:id="@+id/roll"
        android:textColor="#9348a0"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/welcome"
        android:layout_alignStart="@+id/marks" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Start Quiz "
        android:id="@+id/fetch"
        android:onClick="showmydetails"
        android:textStyle="bold"
        android:layout_below="@+id/roll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:background="#4c1252"
        android:textColor="#fefdfd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" See Marks "
        android:id="@+id/marks"
        android:onClick="showMarks"
        android:textStyle="bold"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/fetch"
        android:layout_alignEnd="@+id/fetch"
        android:background="#4c1252"
        android:textColor="#fefdfd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Check Avg "
        android:id="@+id/avg"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/marks"
        android:layout_centerHorizontal="true"
        android:background="#4c1252"
        android:textColor="#fefdfd"
        android:onClick="showAverage" />

</RelativeLayout>
