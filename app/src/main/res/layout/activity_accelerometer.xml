<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8d17e">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/current"
        android:layout_marginTop="60dp"
        android:text="Current Acceleration"
        android:layout_centerHorizontal="true"
        android:textSize="35dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/x"
        android:layout_below="@+id/current"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:text="X-Axis"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/currentX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/x"
        android:layout_marginTop="20dp"
        android:text="0.0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/y"
        android:layout_below="@+id/currentX"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Y-Axis"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/currentY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/y"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="0.0"
        android:textSize="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/z"
        android:layout_below="@+id/currentY"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Z-Axis"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/currentZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/z"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="0.0"
        android:textSize="20dp" />

</RelativeLayout>